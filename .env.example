# ============================================
# Telegram Bot Configuration
# ============================================
TELEGRAM_TOKEN=your_bot_token_here_from_botfather
TELEGRAM_USER_ID=your_user_id_here_from_userinfobot
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# ============================================
# Gmail Configuration
# ============================================
GMAIL_CREDENTIALS_FILE=credentials.json
# credentials.json is generated from Google Cloud Console
# Download from: https://console.cloud.google.com/

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite:///./bot_database.db
DATABASE_ECHO=false

# ============================================
# Scheduler Configuration
# ============================================
SCHEDULER_ENABLED=true
TIMEZONE=UTC
MORNING_SUMMARY_TIME=08:00
EVENING_SUMMARY_TIME=20:00

# ============================================
# Application Configuration
# ============================================
APP_NAME=Personal Assistant Bot
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# Server Configuration
# ============================================
HOST=127.0.0.1
PORT=8000
RELOAD=false

# ============================================
# IMPORTANT SECURITY NOTES
# ============================================
# DO NOT COMMIT THIS FILE TO GIT
# Use .env.example as template and copy to .env
# Add .env to .gitignore (already done)
# Never share your actual API keys or tokens
# Rotate credentials regularly
